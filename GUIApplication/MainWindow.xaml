<Window x:Class="GUIApplication.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GUIApplication"
        xmlns:gui="clr-namespace:GUIApplication"
        xmlns:core="clr-namespace:UIBackend.ViewModel;assembly=UIBackend"
        Title="MainWindow" Height="629.2" Width="998.4">
    <Window.Resources>
        <local:Browser x:Key="guiBrowser" x:Name="Browser_name"/>
    </Window.Resources>
    <Window.DataContext>
        <core:ViewModel core:Browser ="{StaticResource guiBrowser}" />
    </Window.DataContext>
    
    <Grid Margin="32,26,28,30.2">
        <TreeView HorizontalAlignment="Left" Height="523" VerticalAlignment="Top" Width="392" Margin="10,10,0,0" ItemsSource="{Binding HierarchicalAreas}">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                <TextBlock Text="{Binding Path=Name}" Margin="0,0,4,0" />
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        <TextBox Text="{Binding Mode=OneWay,Path=PathVariable}" HorizontalAlignment="Left" Margin="426,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="496"/>
        <Button x:Name="browseButton" Content="Browse" Command="{Binding Click_Browse}" HorizontalAlignment="Left" Margin="782,84,0,0" VerticalAlignment="Top" Width="97" Height="36" />
        <Button x:Name="treeViewButton" Content="read from file" Command="{Binding Click_ShowTreeView}" HorizontalAlignment="Left" Margin="694,162,0,0" VerticalAlignment="Top" Width="185" Height="42"/>
        <Button x:Name="serializeButton" Content="serialize to XML"  Command="{Binding Click_Serialize}" HorizontalAlignment="Left" Margin="694,240,0,0" VerticalAlignment="Top" Width="185" Height="43" />
        <Button x:Name="saveToDbButton" Content="save to DB" Command="{Binding Click_SaveToDb}" HorizontalAlignment="Left" Height="40" Margin="694,321,0,0" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="readFromDbButton" Content="read from DB"  Command="{Binding Click_ReadFromDb}" HorizontalAlignment="Left" Margin="694,396,0,0" VerticalAlignment="Top" Width="185" Height="43" />

    </Grid>
</Window>
